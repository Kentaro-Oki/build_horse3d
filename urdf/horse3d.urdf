<?xml version="1.0"?>
<robot name="horse3d">
    <link name="base_link">
        <visual>
            <geometry>
                <cylinder radius="0.2" length="0.6"/>
            </geometry>
            <color rgba="0.0 0.0 1.0 0.0"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.2" length="0.6"/>
            </geometry>
        </collision>
    </link>

    <link name="right_leg">
        <visual>
            <geometry>
                <box size="0.6 0.1 0.2"/>
            </geometry>
            <origin xyz="0.0 0.0 -0.3" rpy="0.0 1.57075 0.0"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.6 0.1 -0.2"/>
            </geometry>
            <origin xyz="0.0 0.0 -0.3" rpy="0.0 1.57075 0.0"/>
        </collision>
    </link>

    <joint name="base_to_right_leg" type="fixed">
        <parent link="base_link"/>
        <child link="right_leg"/>
        <origin xyz="0.0 -0.22 0.25" rpy="0.0 0.0 0.0"/>
    </joint>
</robot>